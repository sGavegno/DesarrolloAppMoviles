<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navgraph"
    app:startDestination="@id/fragmentLogin">

    <fragment
        android:id="@+id/fragmentLogin"
        android:name="com.example.apppokedex.fragments.FragmentLogin"
        android:label="fragment_fragment_login"
        tools:layout="@layout/fragment_fragment_login" >
        <action
            android:id="@+id/action_fragmentLogin_to_fragmentPokedex"
            app:destination="@id/fragmentPokedex" />
    </fragment>
    <fragment
        android:id="@+id/fragmentPokedex"
        android:name="com.example.apppokedex.fragments.FragmentPokedex"
        android:label="fragment_fragment_pokedex"
        tools:layout="@layout/fragment_fragment_pokedex" >
        <action
            android:id="@+id/action_fragmentPokedex_to_fragmentPokemonData"
            app:destination="@id/fragmentPokemonData" />
    </fragment>
    <fragment
        android:id="@+id/fragmentPokemonData"
        android:name="com.example.apppokedex.fragments.FragmentPokemonData"
        android:label="fragment_fragment_pokemon_data"
        tools:layout="@layout/fragment_fragment_pokemon_data" >
        <argument
            android:name="pokemonData"
            app:argType="com.example.apppokedex.entities.Pokemons" />
        <action
            android:id="@+id/action_fragmentPokemonData_self"
            app:destination="@id/fragmentPokemonData" />
    </fragment>
</navigation>