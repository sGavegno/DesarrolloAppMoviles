<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF0000"
    tools:context=".fragments.FragmentPokemonData">

    <TextView
        android:id="@+id/txtPokeName"
        android:layout_width="186dp"
        android:layout_height="29dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:text="Nombre"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.906"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtPokeId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="NÂº:"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toEndOf="@+id/cvImgPokemom"
        app:layout_constraintTop_toBottomOf="@+id/txtPokeMote" />

    <TextView
        android:id="@+id/txtPokeIdDato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="32dp"
        android:background="@android:color/transparent"
        android:text="ID"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtPokeId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintStart_toEndOf="@+id/txtPokeId"
        app:layout_constraintTop_toTopOf="@+id/txtPokeId"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtPokeDebilidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Debilidad:"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listaEvolucion" />

    <TextView
        android:id="@+id/txtPokeDebilidadDato"
        android:layout_width="247dp"
        android:layout_height="57dp"
        android:layout_marginStart="24dp"
        android:background="@android:color/transparent"
        android:text="PokeDebilidad"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtPokeDebilidad"
        app:layout_constraintStart_toEndOf="@+id/txtPokeDebilidad"
        app:layout_constraintTop_toTopOf="@+id/txtPokeDebilidad"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtPokeTipoDato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:text="PokeTipo"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txtPokeName"
        app:layout_constraintHorizontal_bias="0.435"
        app:layout_constraintStart_toStartOf="@+id/txtPokeName"
        app:layout_constraintTop_toBottomOf="@+id/txtPokeId" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listaEvolucion"
        android:layout_width="0dp"
        android:layout_height="125dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPokeEvolucion" />

    <TextView
        android:id="@+id/txtPokeEvolucion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Evoluciones:"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.103"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvPokemonDatos" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvImgPokemom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="128dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgPokeDato"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:background="@drawable/poke_fondo1"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvPokemonDescripcion"
        android:layout_width="369dp"
        android:layout_height="98dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvImgPokemom">

        <TextView
            android:id="@+id/txtPokeDescripcion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:text="Descripcion"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvPokemonDatos"
        android:layout_width="411dp"
        android:layout_height="215dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#000000"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvPokemonDescripcion">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtPokeAltura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Altura:"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.049"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtPokeAlturaDato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="88dp"
                android:background="@android:color/transparent"
                android:text="PokeAltura"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/txtPokeAltura"
                app:layout_constraintStart_toEndOf="@+id/txtPokeAltura"
                app:layout_constraintTop_toTopOf="@+id/txtPokeAltura"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txtPokePeso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Peso:"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/txtPokeAltura"
                app:layout_constraintHorizontal_bias="0.125"
                app:layout_constraintStart_toStartOf="@+id/txtPokeAltura"
                app:layout_constraintTop_toBottomOf="@+id/txtPokeAltura" />

            <TextView
                android:id="@+id/txtPokeHabilidadDato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:background="@android:color/transparent"
                android:text="PokeHabilidad"
                android:textAlignment="viewStart"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/txtPokeHabilidad"
                app:layout_constraintStart_toEndOf="@+id/txtPokeHabilidad"
                app:layout_constraintTop_toTopOf="@+id/txtPokeHabilidad"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txtPokeHabilidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Habilidad:"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/txtPokeCategoria"
                app:layout_constraintStart_toStartOf="@+id/txtPokeCategoria"
                app:layout_constraintTop_toBottomOf="@+id/txtPokeCategoria" />

            <TextView
                android:id="@+id/txtPokePesoDato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="96dp"
                android:background="@android:color/transparent"
                android:text="PokePeso"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/txtPokePeso"
                app:layout_constraintStart_toEndOf="@+id/txtPokePeso"
                app:layout_constraintTop_toTopOf="@+id/txtPokePeso"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txtPokeCategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Categoria:"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/txtPokePeso"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/txtPokePeso"
                app:layout_constraintTop_toBottomOf="@+id/txtPokePeso" />

            <TextView
                android:id="@+id/txtPokeCategoriaDato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:background="@android:color/transparent"
                android:text="PokeCategoria"
                android:textAlignment="viewStart"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/txtPokeCategoria"
                app:layout_constraintStart_toEndOf="@+id/txtPokeCategoria"
                app:layout_constraintTop_toTopOf="@+id/txtPokeCategoria"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtPokeMoteDato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mote"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtPokeMote"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.197"
        app:layout_constraintStart_toEndOf="@+id/txtPokeMote"
        app:layout_constraintTop_toTopOf="@+id/txtPokeMote"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtPokeLvl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lvl:"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtPokeIdDato"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.354"
        app:layout_constraintStart_toEndOf="@+id/txtPokeIdDato"
        app:layout_constraintTop_toTopOf="@+id/txtPokeIdDato"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtPokeLvlDato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lvl"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtPokeLvl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.366"
        app:layout_constraintStart_toEndOf="@+id/txtPokeLvl"
        app:layout_constraintTop_toTopOf="@+id/txtPokeLvl"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtPokeMote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Mote:"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toEndOf="@+id/cvImgPokemom"
        app:layout_constraintTop_toBottomOf="@+id/txtPokeName" />

</androidx.constraintlayout.widget.ConstraintLayout>