<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B5C7ED"
    tools:context=".fragments.FragmentPokedexData">

    <TextView
        android:id="@+id/txtPokedexDebilidadDato"
        android:layout_width="251dp"
        android:layout_height="41dp"
        android:layout_marginStart="24dp"
        android:background="@android:color/transparent"
        android:text="PokeDebilidad"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtPokedexDebilidad"
        app:layout_constraintStart_toEndOf="@+id/txtPokedexDebilidad"
        app:layout_constraintTop_toTopOf="@+id/txtPokedexDebilidad"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtPokedexDebilidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Debilidad:"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvPokedexDatos" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvPokedexDatos"
        android:layout_width="411dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#000000"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvImgPokedex">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="98dp">

            <TextView
                android:id="@+id/txtPokedexAltura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Altura:"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.049"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtPokedexAlturaDato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="88dp"
                android:background="@android:color/transparent"
                android:text="PokeAltura"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/txtPokedexAltura"
                app:layout_constraintStart_toEndOf="@+id/txtPokedexAltura"
                app:layout_constraintTop_toTopOf="@+id/txtPokedexAltura"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txtPokedexPeso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Peso:"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/txtPokedexAltura"
                app:layout_constraintHorizontal_bias="0.125"
                app:layout_constraintStart_toStartOf="@+id/txtPokedexAltura"
                app:layout_constraintTop_toBottomOf="@+id/txtPokedexAltura" />

            <TextView
                android:id="@+id/txtPokedexPesoDato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="96dp"
                android:background="@android:color/transparent"
                android:text="PokePeso"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/txtPokedexPeso"
                app:layout_constraintStart_toEndOf="@+id/txtPokedexPeso"
                app:layout_constraintTop_toTopOf="@+id/txtPokedexPeso"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtPokedexIdDato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="ID"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtPokedexId"
        app:layout_constraintStart_toEndOf="@+id/txtPokedexId"
        app:layout_constraintTop_toTopOf="@+id/txtPokedexId"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtPokedexId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="#"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txtPokedexName"
        app:layout_constraintHorizontal_bias="0.242"
        app:layout_constraintStart_toStartOf="@+id/txtPokedexName"
        app:layout_constraintTop_toBottomOf="@+id/txtPokedexName" />

    <TextView
        android:id="@+id/txtPokedexName"
        android:layout_width="186dp"
        android:layout_height="29dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:text="Nombre"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.906"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvImgPokedex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="128dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgPokedexDato"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:background="@drawable/poke_fondo1" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtPokedexGeneracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="112dp"
        android:text="Generacion:"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtPokedexName"
        app:layout_constraintTop_toBottomOf="@+id/imgTipo1" />

    <TextView
        android:id="@+id/txtPokedexGeneracionDato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="NÂº Gen"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtPokedexGeneracion"
        app:layout_constraintStart_toEndOf="@+id/txtPokedexGeneracion"
        app:layout_constraintTop_toTopOf="@+id/txtPokedexGeneracion" />

    <ImageView
        android:id="@+id/imgTipo1"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/cvImgPokedex"
        app:layout_constraintTop_toBottomOf="@+id/txtPokedexId" />

    <ImageView
        android:id="@+id/imgTipo2"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/imgTipo1"
        app:layout_constraintStart_toEndOf="@+id/imgTipo1"
        app:layout_constraintTop_toTopOf="@+id/imgTipo1" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPokedexDebilidad">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgTipo"
                android:layout_width="100dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imgTipo3"
                android:layout_width="100dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toEndOf="@+id/imgTipo"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imgTipo4"
                android:layout_width="100dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toEndOf="@+id/imgTipo3"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imgTipo5"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgTipo" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>